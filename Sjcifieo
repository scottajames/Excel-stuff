<body>
    <div class="container">
        <div class="header">
            <h1>üìä Excel File Processor</h1>
            <p>Upload an Excel file to process "Connect Inputs" sheet</p>
        </div>
        
        <div class="content">
            <div class="upload-area" id="dropArea">
                <div class="upload-icon">üìÅ</div>
                <div class="upload-text">Click to upload or drag & drop Excel file</div>
                <div class="upload-subtext">Only .xlsx, .xls files are supported</div>
                <input type="file" id="fileInput" accept=".xlsx,.xls">
            </div>
            
            <button class="process-btn" id="processBtn" disabled>Process Excel File</button>
            
            <div class="mapping-info">
                <h3>üìã Mapping Rules Applied:</h3>
                <div class="mapping-grid">
                    <div class="mapping-item">
                        <strong>SUPV:</strong><br>
                        Sergeant, Detective Sergeant, D, K2, N, P, Q
                    </div>
                    <div class="mapping-item">
                        <strong>MNGR:</strong><br>
                        Inspector, Detective Inspector, C, M, V
                    </div>
                    <div class="mapping-item">
                        <strong>SNR MNGR:</strong><br>
                        Chief Inspector, Detective Chief Inspector, B, J, L, U
                    </div>
                    <div class="mapping-item">
                        <strong>Other:</strong><br>
                        Superintendent, Detective Superintendent, A, H, S (No change)
                    </div>
                </div>
                <p style="margin-top: 15px; color: #666; font-size: 14px;">
                    <strong>Note:</strong> Column K values are checked, and corresponding values are written to Column L
                </p>
            </div>
            
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Processing file... Please wait</p>
            </div>
            
            <div class="status" id="status"></div>
        </div>
    </div>

    <script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
    <script>
        // DOM Elements
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const processBtn = document.getElementById('processBtn');
        const loading = document.getElementById('loading');
        const status = document.getElementById('status');

        // File handling
        dropArea.addEventListener('click', () => fileInput.click());
        
        dropArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropArea.classList.add('dragover');
        });
        
        dropArea.addEventListener('dragleave', () => {
            dropArea.classList.remove('dragover');
        });
        
        dropArea.addEventListener('drop', (e) => {
            e.preventDefault();
            dropArea.classList.remove('dragover');
            
            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFileSelect(e.target.files[0]);
            }
        });
        
        function handleFileSelect(file) {
            if (!file.name.match(/\.(xlsx|xls)$/i)) {
                showStatus('Please upload an Excel file (.xlsx or .xls)', 'error');
                processBtn.disabled = true;
                return;
            }
            
            processBtn.disabled = false;
            dropArea.querySelector('.upload-text').textContent = `Selected: ${file.name}`;
            dropArea.querySelector('.upload-subtext').textContent = 
                `Size: ${(file.size / 1024 / 1024).toFixed(2)} MB`;
        }
        
        // Processing function
        processBtn.addEventListener('click', async () => {
            if (!fileInput.files.length) return;
            
            const file = fileInput.files[0];
            loading.style.display = 'block';
            status.style.display = 'none';
            processBtn.disabled = true;
            
            try {
                const data = await readExcelFile(file);
                const workbook = XLSX.read(data, { type: 'array' });
                
                // Check if "Connect Inputs" sheet exists
                if (!workbook.SheetNames.includes('Connect Inputs')) {
                    throw new Error('Sheet named "Connect Inputs" not found in the Excel file');
                }
                
                // Get the sheet
                const sheet = workbook.Sheets['Connect Inputs'];
                const jsonData = XLSX.utils.sheet_to_json(sheet, { header: 1 });
                
                // Process the data
                processExcelData(jsonData);
                
                // Update the sheet with processed data
                const newWorksheet = XLSX.utils.aoa_to_sheet(jsonData);
                workbook.Sheets['Connect Inputs'] = newWorksheet;
                
                // Generate new Excel file
                const wbout = XLSX.write(workbook, { 
                    bookType: 'xlsx', 
                    type: 'array' 
                });
                
                // Create download link
                const blob = new Blob([wbout], { type: 'application/octet-stream' });
                const url = URL.createObjectURL(blob);
                
                // Show success message with download link
                showStatus(`
                    ‚úÖ File processed successfully!<br>
                    <a href="${url}" download="processed_${file.name}" class="download-btn">
                        üì• Download Processed File
                    </a>
                `, 'success');
                
            } catch (error) {
                showStatus(`‚ùå Error: ${error.message}`, 'error');
            } finally {
                loading.style.display = 'none';
                processBtn.disabled = false;
            }
        });
        
        function readExcelFile(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                
                reader.onload = (e) => {
                    resolve(e.target.result);
                };
                
                reader.onerror = (error) => {
                    reject(new Error('Error reading file'));
                };
                
                reader.readAsArrayBuffer(file);
            });
        }
        
        function processExcelData(data) {
            // Find column indices (K = column 10, L = column 11 in 0-indexed array)
            const colKIndex = 10; // Column K (0-indexed: A=0, B=1, ..., K=10)
            const colLIndex = 11; // Column L
            
            // Check if we have at least one row
            if (data.length === 0) return;
            
            // Process each row
            for (let i = 0; i < data.length; i++) {
                const row = data[i];
                
                // Ensure row has enough columns
                while (row.length <= colLIndex) {
                    row.push('');
                }
                
                // Get value from column K (trim whitespace and convert to string)
                const colKValue = row[colKIndex] ? String(row[colKIndex]).trim().toLowerCase() : '';
                
                if (!colKValue) {
                    // If column K is empty, leave column L empty
                    row[colLIndex] = '';
                    continue;
                }
                
                // Apply mapping rules
                let colLValue = '';
                
                // SUPV mapping
                const supvKeywords = ['sergeant', 'detective sergeant', 'd', 'k2', 'n', 'p', 'q'];
                if (supvKeywords.some(keyword => colKValue.includes(keyword.toLowerCase()))) {
                    colLValue = 'SUPV';
                }
                
                // MNGR mapping
                const mngrKeywords = ['inspector', 'detective inspector', 'c', 'm', 'v'];
                if (mngrKeywords.some(keyword => colKValue.includes(keyword.toLowerCase()))) {
                    colLValue = 'MNGR';
                }
                
                // SNR MNGR mapping
                const snrMngrKeywords = ['chief inspector', 'detective chief inspector', 'b', 'j', 'l', 'u'];
                if (snrMngrKeywords.some(keyword => colKValue.includes(keyword.toLowerCase()))) {
                    colLValue = 'SNR MNGR';
                }
                
                // Superintendent mapping - leave empty as per requirements
                const supKeywords = ['superintendent', 'detective superintendent', 'a', 'h', 's'];
                if (supKeywords.some(keyword => colKValue.includes(keyword.toLowerCase()))) {
                    colLValue = ''; // Leave blank for these
                }
                
                // Set column L value
                row[colLIndex] = colLValue;
            }
        }
        
        function showStatus(message, type) {
            status.innerHTML = message;
            status.className = `status ${type}`;
            status.style.display = 'block';
            
            // Scroll to status
            status.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>
