    <script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
    <script>
        // DOM Elements
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const processBtn = document.getElementById('processBtn');
        const loading = document.getElementById('loading');
        const status = document.getElementById('status');
        const uploadText = document.querySelector('.upload-text');
        const uploadSubtext = document.querySelector('.upload-subtext');

        // File handling
        dropArea.addEventListener('click', () => fileInput.click());
        
        dropArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropArea.classList.add('dragover');
        });
        
        dropArea.addEventListener('dragleave', () => {
            dropArea.classList.remove('dragover');
        });
        
        dropArea.addEventListener('drop', (e) => {
            e.preventDefault();
            dropArea.classList.remove('dragover');
            
            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleFileSelect(e.target.files[0]);
            }
        });
        
        function handleFileSelect(file) {
            const validExtensions = /\.(xlsx|xls|xlsm)$/i;
            
            if (!file.name.match(validExtensions)) {
                showStatus('Please upload an Excel file (.xlsx, .xls, or .xlsm)', 'error');
                processBtn.disabled = true;
                return;
            }
            
            // Check if it's a macro-enabled file
            const isMacroFile = file.name.toLowerCase().endsWith('.xlsm');
            
            processBtn.disabled = false;
            uploadText.textContent = `Selected: ${file.name}`;
            uploadSubtext.textContent = `Size: ${(file.size / 1024 / 1024).toFixed(2)} MB ${isMacroFile ? '‚Ä¢ Macro-enabled' : ''}`;
            
            if (isMacroFile) {
                showStatus('‚ö†Ô∏è Note: This is a macro-enabled file (.xlsm). Macros will not be preserved in the output.', 'warning');
            }
        }
        
        // Processing function
        processBtn.addEventListener('click', async () => {
            if (!fileInput.files.length) return;
            
            const file = fileInput.files[0];
            loading.style.display = 'block';
            status.style.display = 'none';
            processBtn.disabled = true;
            
            try {
                const data = await readExcelFile(file);
                const workbook = XLSX.read(data, { type: 'array' });
                
                // Check if "Connect Inputs" sheet exists
                const sheetNames = workbook.SheetNames;
                const targetSheetName = findTargetSheet(sheetNames);
                
                if (!targetSheetName) {
                    throw new Error('Sheet named "Connect Inputs" or similar not found in the Excel file');
                }
                
                // Get the sheet
                const sheet = workbook.Sheets[targetSheetName];
                const jsonData = XLSX.utils.sheet_to_json(sheet, { header: 1 });
                
                // Process the data
                const processedCount = processExcelData(jsonData);
                
                // Update the sheet with processed data
                const newWorksheet = XLSX.utils.aoa_to_sheet(jsonData);
                workbook.Sheets[targetSheetName] = newWorksheet;
                
                // Generate new Excel file
                const wbout = XLSX.write(workbook, { 
                    bookType: 'xlsx', 
                    type: 'array' 
                });
                
                // Create download link
                const blob = new Blob([wbout], { type: 'application/octet-stream' });
                const url = URL.createObjectURL(blob);
                const timestamp = new Date().toISOString().slice(0, 19).replace(/[:]/g, '-');
                const originalName = file.name.replace(/\.[^/.]+$/, "");
                const downloadName = `processed_${originalName}_${timestamp}.xlsx`;
                
                // Show success message with download link
                showStatus(`
                    <div style="font-size: 48px;">‚úÖ</div>
                    <div style="text-align: center;">
                        <strong>File processed successfully!</strong><br>
                        <span style="font-size: 14px; color: #555;">
                            Sheet: "${targetSheetName}"<br>
                            ${processedCount} cells updated in Column L
                        </span>
                        <br><br>
                        <a href="${url}" download="${downloadName}" class="download-btn">
                            <span>üì•</span>
                            Download Processed File
                        </a>
                    </div>
                `, 'success');
                
            } catch (error) {
                showStatus(`
                    <div style="font-size: 48px;">‚ùå</div>
                    <div style="text-align: center;">
                        <strong>Error:</strong><br>
                        ${error.message}
                    </div>
                `, 'error');
            } finally {
                loading.style.display = 'none';
                processBtn.disabled = false;
            }
        });
        
        function findTargetSheet(sheetNames) {
            // Try exact match first
            const exactMatch = sheetNames.find(name => name === 'Connect Inputs');
            if (exactMatch) return exactMatch;
            
            // Try case-insensitive match
            const insensitiveMatch = sheetNames.find(name => 
                name.toLowerCase().includes('connect') || 
                name.toLowerCase().includes('input')
            );
            if (insensitiveMatch) return insensitiveMatch;
            
            // Return first sheet if no match found
            return sheetNames[0];
        }
        
        function readExcelFile(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                
                reader.onload = (e) => {
                    resolve(e.target.result);
                };
                
                reader.onerror = (error) => {
                    reject(new Error('Error reading file. Please make sure the file is not corrupted.'));
                };
                
                reader.readAsArrayBuffer(file);
            });
        }
        
        function processExcelData(data) {
            // Find column indices (K = column 10, L = column 11 in 0-indexed array)
            const colKIndex = 10; // Column K (0-indexed: A=0, B=1, ..., K=10)
            const colLIndex = 11; // Column L
            
            let processedCount = 0;
            
            // Check if we have at least one row
            if (data.length === 0) return processedCount;
            
            // Process each row
            for (let i = 0; i < data.length; i++) {
                const row = data[i];
                
                // Ensure row has enough columns
                while (row.length <= colLIndex) {
                    row.push('');
                }
                
                // Get value from column K (trim whitespace and convert to string)
                const colKValue = row[colKIndex] ? String(row[colKIndex]).trim() : '';
                
                if (!colKValue) {
                    // If column K is empty, leave column L empty
                    if (row[colLIndex] !== '') {
                        row[colLIndex] = '';
                        processedCount++;
                    }
                    continue;
                }
                
                const colKValueLower = colKValue.toLowerCase();
                
                // Apply mapping rules
                let colLValue = row[colLIndex]; // Keep existing value if no match
                
                // SUPV mapping
                const supvKeywords = ['sergeant', 'detective sergeant', 'd', 'k2', 'n', 'p', 'q'];
                if (supvKeywords.some(keyword => 
                    colKValueLower.includes(keyword.toLowerCase()) || 
                    colKValueLower === keyword.toLowerCase()
                )) {
                    colLValue = 'SUPV';
                }
                
                // MNGR mapping
                const mngrKeywords = ['inspector', 'detective inspector', 'c', 'm', 'v'];
                if (mngrKeywords.some(keyword => 
                    colKValueLower.includes(keyword.toLowerCase()) || 
                    colKValueLower === keyword.toLowerCase()
                )) {
                    colLValue = 'MNGR';
                }
                
                // SNR MNGR mapping
                const snrMngrKeywords = ['chief inspector', 'detective chief inspector', 'b', 'j', 'l', 'u'];
                if (snrMngrKeywords.some(keyword => 
                    colKValueLower.includes(keyword.toLowerCase()) || 
                    colKValueLower === keyword.toLowerCase()
                )) {
                    colLValue = 'SNR MNGR';
                }
                
                // SLT mapping (UPDATED: Now puts "SLT" instead of leaving blank)
                const sltKeywords = ['superintendent', 'detective superintendent', 'a', 'h', 's'];
                if (sltKeywords.some(keyword => 
                    colKValueLower.includes(keyword.toLowerCase()) || 
                    colKValueLower === keyword.toLowerCase()
                )) {
                    colLValue = 'SLT';
                }
                
                // Only update if value changed
                if (row[colLIndex] !== colLValue) {
                    row[colLIndex] = colLValue;
                    processedCount++;
                }
            }
            
            return processedCount;
        }
        
        function showStatus(message, type) {
            status.innerHTML = message;
            status.className = `status ${type}`;
            status.style.display = 'flex';
            
            // Scroll to status
            setTimeout(() => {
                status.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 100);
        }
    </script>
</body>
</html>
