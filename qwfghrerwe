        /* Security level colors */
        .level-10 { background-color: #e15759; color: white; border-left: 4px solid #c94547; }
        .level-9 { background-color: #f28e2b; color: white; border-left: 4px solid #da7c1a; }
        .level-8 { background-color: #edc948; color: black; border-left: 4px solid #d8b620; }
        .level-7 { background-color: #59a14f; color: white; border-left: 4px solid #47893d; }
        .level-6 { background-color: #76b7b2; color: white; border-left: 4px solid #5fa09b; }
